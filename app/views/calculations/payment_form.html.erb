<h1>Payment Calculation</h1>

<!-- forms must have label, form, and button -->

<form action="/payment/results">
  <div>
    <label>
      APR
    </label>
        <input type="text" name="apr" placeholder="E.g. 5.42">
  </div>

  <div>
    <label>
      Number of years
    </label>
        <input type="text" name="year" placeholder="How many years to repay?">
  </div>


  <div>
    <label>
      Principal
    </label>
        <input type="text" name="principle" placeholder="How much principal?">
  </div>

  <div>
    <button>Calculate monthly payment</button>
  </div>


</form>
